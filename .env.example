# Meta Marketing API Credentials
# Get these from: business.facebook.com → Business Settings → System Users
META_AD_ACCOUNT_ID=act_1234567890
META_ACCESS_TOKEN=your_long_access_token_here
META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret

# Google Sheets Integration (for output)
# Get credentials from: console.cloud.google.com
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
SPREADSHEET_ID=your_google_sheet_id_here

# Email Notifications
EMAIL_ADDRESS=your.email@company.com
SENDGRID_API_KEY=optional_sendgrid_key_for_emails

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Quality Control Thresholds
# Adjust these based on your account performance standards

# Frequency (alert when ad frequency exceeds this)
FREQUENCY_ALERT_THRESHOLD=2.5
FREQUENCY_CRITICAL_THRESHOLD=3.5

# Performance thresholds
CPA_THRESHOLD=50  # Maximum acceptable cost per acquisition
MIN_ROAS=2.0  # Minimum return on ad spend
MIN_CTR=0.8  # Minimum click-through rate (%)
MIN_DAILY_SPEND=10  # Alert if daily spend drops below this

# Audience thresholds
MIN_AUDIENCE_SIZE=1000  # Minimum audience size
MAX_AUDIENCE_SIZE=50000000  # Maximum (too broad)
AUDIENCE_OVERLAP_THRESHOLD=25  # % overlap alert threshold

# Budget pacing
BUDGET_PACING_MIN=0.8  # Alert if under 80% paced
BUDGET_PACING_MAX=1.2  # Alert if over 120% paced

# Analysis settings
DAYS_TO_ANALYZE=7  # How many days of data to analyze
MIN_SPEND_FOR_ANALYSIS=50  # Minimum spend to include in analysis

# Anomaly detection
ANOMALY_THRESHOLD_SPEND=0.5  # 50% deviation in spend
ANOMALY_THRESHOLD_CPA=0.5  # 50% deviation in CPA
ANOMALY_THRESHOLD_ROAS=0.3  # 30% deviation in ROAS
ANOMALY_THRESHOLD_CTR=0.5  # 50% deviation in CTR

# Match quality (for CAPI/Pixel)
MIN_MATCH_QUALITY=7.0  # Minimum acceptable match quality score

# Creative age (days)
CREATIVE_REFRESH_AGE=30  # Flag creatives older than this

# System settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=false
